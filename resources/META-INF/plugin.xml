<idea-plugin>

  <id>ru.spb.se.contexthelper</id>
  <name>Context Helper</name>
  <version>1.0</version>
  <vendor email="nikitasazanovich@gmail.com">Nikita Sazanovich</vendor>

  <description>
    Helps Java users to look up help based on the current context.
  </description>

  <change-notes>
  </change-notes>

  <idea-version since-build="145.0"/>

  <depends>com.intellij.modules.java</depends>

  <project-components>
    <component>
      <implementation-class>ru.spb.se.contexthelper.component.ContextHelperProjectComponent</implementation-class>
      <!-- TODO(niksaz): Implement saving the plugin's state. -->
      <!--option name="workspace" value="true"/-->
    </component>
  </project-components>

  <extensions defaultExtensionNs="com.intellij">
    <intentionAction>
      <className>ru.spb.se.contexthelper.SelectionContextHelpIntention</className>
      <category>Context Helper</category>
      <descriptionDirectoryName>ContextHelpIntention</descriptionDirectoryName>
    </intentionAction>
  </extensions>

  <actions>
    <action id="DeclarationsContextHelpAction"
            class="ru.spb.se.contexthelper.DeclarationsContextHelpAction"
            text="Suggest help based on the available declarations"
            icon="/icons/declaration-16.png"
            description="Suggest help based on the available declarations"/>

    <group id="ContextHelpGroup">
      <separator/>
      <reference ref="DeclarationsContextHelpAction"/>
      <add-to-group group-id="MainToolBar" relative-to-action="SearchEverywhere" anchor="after"/>
    </group>
  </actions>

</idea-plugin>