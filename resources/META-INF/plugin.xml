<idea-plugin>

  <id>ru.spb.se.contexthelper</id>
  <name>Context Helper</name>
  <version>1.0</version>
  <vendor email="nikitasazanovich@gmail.com">Nikita Sazanovich</vendor>

  <description>
    Helps Java users to look up help based on the current context.
  </description>

  <change-notes>
  </change-notes>

  <idea-version since-build="145.0"/>

  <depends>com.intellij.modules.java</depends>

  <project-components>
    <component>
      <implementation-class>ru.spb.se.contexthelper.component.ContextHelperProjectComponent</implementation-class>
      <!-- TODO(niksaz): Implement saving the plugin's state. -->
      <!--option name="workspace" value="true"/-->
    </component>
  </project-components>

  <extensions defaultExtensionNs="com.intellij">
  </extensions>

  <actions>
    <action id="ContextHelpAction"
            class="ru.spb.se.contexthelper.ContextHelpAction"
            text="Get help based on the context"
            icon="/icons/binary-tree-icon.png"
            description="Gets help based on the editor's caret"/>

    <group id="ContextHelperGroup">
      <separator/>

      <reference ref="ContextHelpAction"/>

      <add-to-group group-id="MainToolBar" relative-to-action="SearchEverywhere" anchor="after"/>
    </group>
  </actions>

</idea-plugin>
